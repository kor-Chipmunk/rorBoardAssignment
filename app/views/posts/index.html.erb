<div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <a href="/posts/new" class="btn btn-success btn-lg btn-block" role="button">글쓰기</a>
    </div>
  </div>

  <div class="row" style="margin-top: 30px;">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-hover">
        <thead>
          <tr>
            <th width="100">게시글 번호</th>
            <th>게시글 제목</th>
            <th width="50"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <%= post.id %>
            </td>
            <td>
              <%= link_to post.title, post_path(post) %>
            </td>
            <td>
              <%= link_to '', post_url(post), method: 'delete', class: "glyphicon glyphicon-remove", remote: true, data: { confirm: "정말 삭제하시겠습니까?" } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>